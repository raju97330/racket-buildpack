#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# Fail fast and fail hard.
set -eo pipefail

BUILD_DIR=$1
CACHE_DIR=$2

mkdir -p $CACHE_DIR

RACKET_DIR=$CACHE_DIR/racket

if [ ! -d $CACHE_DIR/racket ]; then
  RACKET_URL="http://mirror.racket-lang.org/installers/6.1.1/racket-6.1.1-x86_64-linux-debian-squeeze.sh"
  echo "-----> Downloading Racket"
  curl --max-time 120 -L "$RACKET_URL" -o $CACHE_DIR/racket.sh
  echo "-----> Installing Racket"  
  mkdir racket
  sh $CACHE_DIR/racket.sh --unix-style --dest $CACHE_DIR/racket/
fi

echo "Racket installed"

# add to droplet
cp -r $RACKET_DIR $BUILD_DIR

export PATH=$CACHE_DIR/racket/bin:$PATH
export LD_LIBRARY_PATH=$CACHE_DIR/racket/lib:$LD_LIBRARY_PATH

echo "-----> Building app"  

cd $BUILD_DIR

# raco exe -v -o $BUILD_DIR/main main.rkt

echo "-----> Binary created"  

ls -l $BUILD_DIR

echo "-----> Build finished"